<div id="wrapper">
  <section id="content">
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span2">
        </div><!--/span-->
        <div class="span10">
          <h1> Projects </h1>
          <h4><%= link_to "Add Project", new_user_project_path(@user), :class => 'btn btn-primary btn-large icon-plus-sign' %></h4>
          <% @projects.each do |project| %>
            <div class="col-sm-4">
              <div class="box">
                <div class="box-header">
                  <div class="title">
                    <%= link_to project.title, user_project_path(@user, project.id) %>
                  </div>
                  <div class="actions">
                    <!-- right aligned box actions -->
                  </div>
                </div>
                <div class="box-content">
                  <%= project.description %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div><!--/row-->
    </div>
  </section>
</div>
