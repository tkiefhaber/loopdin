<header>
  <nav class="navbar navbar-default">
    <%= link_to image_tag("bigchicken.png", :height => 25, :width => 25, :alt => 'logo', :title => 'logo'), root_path, :class => 'navbar-brand logo' %>
    <!-- dropdowns -->
    <ul class="nav">
      <!-- dark dropdown & user menu -->
      <li class="dropdown dark user-menu">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <span class="user-name">
            <i class="icon-cogs"> info</i>
          </span>
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to "Edit #{@user.username}", edit_user_registration_path %>
          </li>
          <li>
            <%= link_to 'Logout', destroy_user_session_path, :method=>'get' %>
          </li>
        </ul>
      </li>
    </ul>
  </nav>
  <nav id="main-nav">
    <div class='navigation'>
      <ul class='nav nav-stacked'>
        <li><%= link_to ' In Progress', user_projects_path(@user, filter: 'in_progress'), class: 'icon-beaker nav-hideable' %></li>
        <li><%= link_to ' Collabos', user_projects_path(@user, filter: 'collabos'), class: 'icon-group nav-hideable' %></li>
        <li><%= link_to ' Approved', user_projects_path(@user, filter: 'approved'), class: 'icon-check nav-hideable' %></li>
        <li><%= link_to ' All', user_projects_path(@user, filter: 'all'), class: 'icon-suitcase nav-hideable' %></li>
      </ul>
    </div>
  </nav>
</header>
<div id="wrapper">
  <section id="content">
    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span2">
        </div><!--/span-->
        <div class="span10">
          <%= bootstrap_flash %>
        </div>
      </div><!--/row-->
    </div>
  </section>
</div>
