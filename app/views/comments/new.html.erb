<body class=''>
  <div class='middle-container'>
    <div class='middle-row'>
      <div class='middle-wrapper'>
        <div class='login-container-header'>
          <div class='container'>
            <div class='row'>
              <div class='col-sm-12'>
                <div class='text-center'>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class='login-container'>
          <div class='container'>
            <div class='row'>
              <div class='col-sm-4 col-sm-offset-4'>
                <h1 class='text-center title'>New Comment</h1>
                <%= form_for [@user, @project, @version, @comment], :html => {class: "validate-form"} do |f| %>
                  <div class="form-group">
                    <div class='controls with-icon-over-input'>
                      <%= f.text_field :start_time, :autofocus => true, :class => 'form-control text-muted', :placeholder => '2 starts at 2 seconds in, 32 at 32' %>
                    </div>
                  </div>
                  <div class='form-group'>
                    <div class='controls with-icon-over-input'>
                      <%= f.text_field :text, :class => 'form-control text-muted', :placeholder => "comment" %>
                    </div>
                  </div>

                  <%= f.submit "Create", :class => 'btn btn-block' %>

                <% end %>
                <div class='text-center'>
                  <hr class='hr-normal'>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class='login-container-footer'>
          <div class='container'>
            <div class='row'>
              <div class='col-sm-12'>
                <div class='text-center'>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>


