<body class='contrast-red login contrast-background'>
  <div class='middle-container'>
    <div class='middle-row'>
      <div class='middle-wrapper'>
        <div class='login-container-header'>
          <div class='container'>
            <div class='row'>
              <div class='col-sm-12'>
                <div class='text-center'>
                  <%= image_tag "bigchicken.png", :size => '120x120', :style => "background-color: transparent; border: none;" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class='login-container'>
          <div class='container'>
            <div class='row'>
              <div class='col-sm-4 col-sm-offset-4'>
                <h1 class='text-center title'>Sign up</h1>
                <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => 'validate-form') do |f| %>
                  <%= devise_error_messages! %>
                  <div class='form-group'>
                    <div class='controls with-icon-over-input'>
                      <%= f.email_field :username, :autofocus => true, :class => 'form-control', :placeholder => 'Username' %>
                      <i class='icon-user text-muted'></i>
                    </div>
                  </div>
                  <div class='form-group'>
                    <div class='controls with-icon-over-input'>
                      <%= f.email_field :email, :class => 'form-control', :placeholder => 'Email' %>
                      <i class='icon-envelope text-muted'></i>
                    </div>
                  </div>
                  <div class='form-group'>
                    <div class='controls with-icon-over-input'>
                      <%= f.password_field :password, :class => 'form-control', :placeholder => "Password" %>
                      <i class='icon-lock text-muted'></i>
                    </div>
                  </div>

                  <div class='form-group'>
                    <div class='controls with-icon-over-input'>
                      <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => "Confirm Password" %>
                      <i class='icon-lock text-muted'></i>
                    </div>
                  </div>

                  <div><%= f.submit "Sign up", :class => 'btn btn-block' %></div>
                <% end %>
                <div class='text-center'>
                  <hr class='hr-normal'>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class='login-container-footer'>
          <div class='container'>
            <div class='row'>
              <div class='col-sm-12'>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>


